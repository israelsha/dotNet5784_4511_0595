<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >



    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="#FFA7CDCE" Offset="0" />
                <GradientStop Color="#FF125F61" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="  Engineer the Future with Ease " HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="auto" Height="80" Background="#FFA9A391" FontSize="48" FontWeight="Bold" Foreground="#FF582121"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,250,0,0" Width="500" Height="auto">
            <!--Show us the List of the Engineers-->
            <Button Content="Admin View" VerticalAlignment="Top" Width="180" Height="70" Click="User_List_Click" Background="#FFAFCEAC" FontWeight="Bold" FontSize="20" Foreground="#FF582121"/>
            <!--Initialize All Data-->
            <Button Content="Engineer View"  Margin="140,0,0,0" VerticalAlignment="Top" Width="180" Height="70" Click="Reset_Click" Background="#FFAFCEAC" FontSize="20" FontWeight="Bold" Foreground="#FF582121"/>
        </StackPanel>
    </Grid>
</Window>
