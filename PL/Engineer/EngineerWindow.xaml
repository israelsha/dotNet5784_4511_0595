<Window x:Class="PL.Engineer.EngineerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"

    Title="EngineerWindow" Height="698" Width="614"
        DataContext="{Binding CurrentEngineer, RelativeSource={RelativeSource Mode=Self}, Mode=TwoWay}">

    <Grid Height="688" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="778*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>
        <Label Content="Id:" HorizontalAlignment="Left" Margin="75,122,0,0" VerticalAlignment="Top" Width="168" Height="46" FontSize="22"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="75,199,0,0" VerticalAlignment="Top" Width="168" Height="46" FontSize="22"/>
        <Label Content="Cost:" HorizontalAlignment="Left" Margin="75,446,0,0" VerticalAlignment="Top" Width="168" Height="46" FontSize="22"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="75,278,0,0" VerticalAlignment="Top" Width="168" Height="46" FontSize="22"/>
        <Label Content="Level:" HorizontalAlignment="Left" Margin="75,358,0,0" VerticalAlignment="Top" Width="168" Height="46" FontSize="22"/>
        <TextBox HorizontalAlignment="Left" Margin="307,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" Height="46" RenderTransformOrigin="0.248,1.647" FontSize="26" 
                 Text="{Binding Id, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" IsEnabled="{Binding IsCreate}"/>

        <TextBox HorizontalAlignment="Left" Margin="307,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" Height="46" RenderTransformOrigin="0.248,1.647" FontSize="26"
                 Text="{Binding Name, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" />
        <TextBox HorizontalAlignment="Left" Margin="307,278,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" Height="46" RenderTransformOrigin="0.248,1.647" FontSize="26"
                 Text="{Binding Email, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}"/>

        <TextBox HorizontalAlignment="Left" Margin="307,446,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" Height="46" RenderTransformOrigin="0.248,1.647" FontSize="26"
                 Text="{Binding Cost, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}"/>

        <ComboBox Margin="307,358,86,0" ItemsSource="{Binding Source={StaticResource EngineerLevelKey}}" 
            SelectedValue="{Binding Level, Mode=TwoWay, NotifyOnValidationError=true, 
            ValidatesOnExceptions=true}" VerticalAlignment="Top" Height="46" FontSize="26" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button HorizontalAlignment="Center" Margin="0,603,0,0" VerticalAlignment="Top" Width="142" Height="46" Grid.RowSpan="2" FontSize="22"
                Content="{Binding Id, Mode=OneTime, Converter={StaticResource ConverIdToContentKey}}" Click="Button_Click" />


    </Grid>
</Window>
